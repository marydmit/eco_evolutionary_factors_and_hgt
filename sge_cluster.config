manifest {
    author = "Marija Dmitrijeva"
    homePage = 'https://github.com/marydmit/eco-evolutionary_factors_and_hgt'
    description = 'Pipeline for detecting horizontal gene transfer events based on tree reconciliation.'
    mainScript = 'complete_pipeline.nf'
}


// Pipeline running parameters.
params {
  minimum_speci=5
  min_cluster_size=5
  max_cluster_size=2000
  min_seq_coverage=75
  ranger_dir="/mnt/mnemo4/maria/software/ranger-dtl/CorePrograms/"
  script_dir="/mnt/mnemo4/maria/github_repos/eco-evolutionary_factors_and_hgt/pipeline/"
}


// Configuration for processes to run on SGE.
executor {
 name = 'sge'
 queueSize = 1000
}
process {
  executor = 'sge'
  clusterOptions = '-l h_rt=INFINITY,h_vmem=4G'
  errorStrategy = 'ignore'
}


// Report generated by Nextflow
trace{
  enabled = true
  file = "nextflow_trace.txt"
  fields='task_id,hash,native_id,process,tag,status,exit,submit,start,complete,peak_rss,peak_vmem'
}
